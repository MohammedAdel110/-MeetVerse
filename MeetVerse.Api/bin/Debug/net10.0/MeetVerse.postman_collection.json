{
  "info": {
    "name": "MeetVerse API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@meetverse.test\",\n  \"password\": \"Password123!\",\n  \"name\": \"Test User\",\n  \"role\": \"Participant\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"testuser@meetverse.test\",\n  \"password\": \"Password123!\"\n}"
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.collectionVariables.set(\"jwt\", json.token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Analytics - Post Noise Metrics",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/meetings/{{meetingId}}/analytics/noise-metrics",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "meetings",
            "{{meetingId}}",
            "analytics",
            "noise-metrics"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"metrics\": [\n    {\n      \"timestamp\": \"2024-01-01T00:00:00Z\",\n      \"clarityScore\": 0.9,\n      \"noiseLevel\": 0.1,\n      \"isLoudNoiseSuppressed\": false,\n      \"frequencyBand\": null,\n      \"rawMetricsJson\": null\n    }\n  ]\n}"
        }
      }
    },
    {
      "name": "Analytics - Get Noise Reports",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/meetings/{{meetingId}}/analytics/noise-reports",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "meetings",
            "{{meetingId}}",
            "analytics",
            "noise-reports"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "jwt",
      "value": ""
    },
    {
      "key": "meetingId",
      "value": ""
    }
  ]
}


